{
    "vhosts": [
        {
            "ip": "127.0.0.1",
            "port": 8000,
            "server_name": "localhost",
            "proxy_pass": {
                "ip": "127.0.0.1",
                "port": 8001,
                "proxy_remove_header": [
                    "Header-Removed",
                    "HTTP_X_FORWARDED_PROTO"
                ],
                "proxy_set_header": {
                    "Foo": "Bar2",
                    "Bar": "Foo2"
                },
                "set_header": {
                    "Chief": "Lucas the spider"
                },
                "remove_header": [
                    "Tiger"
                ]
            }
        },
        {
            "ip": "0.0.0.0",
            "port": 8080,
            "server_name": "sub.localhost",
            "proxy_pass": {
                "upstream": "backend"
            }
        }
    ],
    "upstreams": {
        "backend": {
            "method": "fail-robin",
            "hosts": [
                {
                    "ip": "127.0.0.1",
                    "port": 5000,
                    "health": "/vie",
                    "weight": 15
                },
                {
                    "ip": "127.0.0.1",
                    "port": 5050,
                    "health": "/health"
                }
            ]
        }
    }
}
